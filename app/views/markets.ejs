<!DOCTYPE>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Market List | LWCMP Tool</title>

    <%- include partials/css.ejs %>
    <link rel="stylesheet" type="text/css" href="/css/table.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.16/css/jquery.dataTables.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway:400,800">
    <link rel='stylesheet' type='text/css' href='http://fonts.googleapis.com/css?family=Lato:400,700'>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" crossorigin="anonymous">

    <!-- jQuery -->
    <script
      src="https://code.jquery.com/jquery-3.3.1.min.js"
      integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
      crossorigin="anonymous"></script>

    <!-- Bootstrap 4.1 JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js" integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T" crossorigin="anonymous"></script>

    <!-- jQuery UI -->
    <script
      src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"
      integrity="sha256-VazP97ZCwtekAsvgPBSUwPFKdrwD3unUfSGVYrahUqU="
      crossorigin="anonymous"></script>

    <link rel="preload" href="/img/live-well-logo.png" as="image" media="">

    <!-- DataTables import -->
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.js"></script>

    <!-- Google Charts API -->
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
</head>

<body>

  <<%- include partials/navbar.ejs %>
    
<div class="container main">
    
    <h2>Market List</h2>
    <div class="card">
        <div class="card-body">
            <table id="table_id" class="display">
                <thead>
                    <tr>
                        <th>Market Name</th>
                        <th>Address</th>
                        <th>Store Type</th> 
                        <th>Zip Code</th>
                        <th>Level</th>
                        <th>Map</th>
                    </tr>
                </thead>
                <tbody>

                    <% markets.forEach(function(market) { %>
                        <tr>
                            <td><a id='turnblue' href='markets/<%= market.key %>'><%= market.name %></a></td>
                            <td><%= market.address %></td>
                            <td><%= market.size %></td>
                            <td><%= market.zip %></td>
                            <td><%= market.level %></td>
                            <td><button class="mapButton"><a href="https://www.google.com/maps/dir/?api=1&destination=<%= market.address %>" target="_blank" style="text-decoration:none"><p>Go!</p></a></button></td>
                        </tr>
                    <% }); %>

                </tbody>
            </table>

       </div>
    </div>

</div>

</body>

<script type="text/javascript" src="js/markets.js"></script>

</html>
